<Window x:Class="WiiMote_To_XBox360.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wiimote Pro" Height="600" Width="950"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <DropShadowEffect x:Key="BtnShadow" BlurRadius="4" ShadowDepth="2" Direction="270" Color="#999999" Opacity="0.5"/>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource CyanBrush}"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="WiimoteGraphic">
            <Canvas Width="120" Height="420">
                <Rectangle Width="90" Height="400" RadiusX="12" RadiusY="12" Fill="#F8F8F8" Canvas.Left="15" Canvas.Top="10">
                    <Rectangle.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.2"/>
                    </Rectangle.Effect>
                </Rectangle>
                <Grid Canvas.Left="30" Canvas.Top="30">
                    <Ellipse Width="12" Height="12" Fill="White" Effect="{StaticResource BtnShadow}"/>
                    <Path Data="M 6,2 A 4,4 0 1 1 5.9,2 M 6,2 L 6,6" Stroke="#FF3333" StrokeThickness="1.5" Width="12" Height="12" HorizontalAlignment="Center" VerticalAlignment="Center" StrokeEndLineCap="Round"/>
                </Grid>
                <Grid Canvas.Left="40" Canvas.Top="60" Width="40" Height="40">
                    <Grid.Effect>
                        <DropShadowEffect BlurRadius="3" Opacity="0.5"/>
                    </Grid.Effect>
                    <Path x:Name="BtnDU" Data="M13,0 L27,0 L27,13 L13,13 Z" Fill="White"/>
                    <Path x:Name="BtnDD" Data="M13,27 L27,27 L27,40 L13,40 Z" Fill="White"/>
                    <Path x:Name="BtnDL" Data="M0,13 L13,13 L13,27 L0,27 Z" Fill="White"/>
                    <Path x:Name="BtnDR" Data="M27,13 L40,13 L40,27 L27,27 Z" Fill="White"/>
                    <Rectangle Width="14" Height="14" Fill="White" Canvas.Left="13" Canvas.Top="13"/>
                </Grid>
                <Grid Canvas.Left="43" Canvas.Top="120">
                    <Ellipse x:Name="BtnA" Width="34" Height="34" Fill="White" Stroke="#EEE" StrokeThickness="1" Effect="{StaticResource BtnShadow}"/>
                    <TextBlock Text="A" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#CCC" FontWeight="Bold" FontSize="16" Margin="0,2,0,0"/>
                </Grid>
                <Grid Canvas.Left="35" Canvas.Top="175">
                    <Ellipse x:Name="BtnMinus" Width="14" Height="14" Fill="White" Effect="{StaticResource BtnShadow}"/>
                    <TextBlock Text="-" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#CCC" FontWeight="Bold"/>
                </Grid>
                <Grid Canvas.Left="53" Canvas.Top="175">
                    <Ellipse x:Name="BtnHome" Width="14" Height="14" Fill="White" Effect="{StaticResource BtnShadow}"/>
                    <Path Data="M 6,0 L 12,5 L 10,5 L 10,10 L 2,10 L 2,5 L 0,5 Z" Fill="{StaticResource CyanBrush}" Width="12" Height="10" Margin="0,1,0,0" Stretch="Uniform"/>
                </Grid>
                <Grid Canvas.Left="71" Canvas.Top="175">
                    <Ellipse x:Name="BtnPlus" Width="14" Height="14" Fill="White" Effect="{StaticResource BtnShadow}"/>
                    <TextBlock Text="+" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#CCC" FontWeight="Bold"/>
                </Grid>
                <UniformGrid Rows="4" Columns="3" Width="10" Height="14" Canvas.Left="55" Canvas.Top="210">
                    <Ellipse Width="1.5" Height="1.5" Fill="#BBB" Margin="0.5"/>
                    <Ellipse Width="1.5" Height="1.5" Fill="#BBB" Margin="0.5"/>
                    <Ellipse Width="1.5" Height="1.5" Fill="#BBB" Margin="0.5"/>
                    <Ellipse Width="1.5" Height="1.5" Fill="#BBB" Margin="0.5"/>
                    <Ellipse Width="1.5" Height="1.5" Fill="#BBB" Margin="0.5"/>
                    <Ellipse Width="1.5" Height="1.5" Fill="#BBB" Margin="0.5"/>
                    <Ellipse Width="1.5" Height="1.5" Fill="#BBB" Margin="0.5"/>
                    <Ellipse Width="1.5" Height="1.5" Fill="#BBB" Margin="0.5"/>
                    <Ellipse Width="1.5" Height="1.5" Fill="#BBB" Margin="0.5"/>
                    <Ellipse Width="1.5" Height="1.5" Fill="#BBB" Margin="0.5"/>
                    <Ellipse Width="1.5" Height="1.5" Fill="#BBB" Margin="0.5"/>
                    <Ellipse Width="1.5" Height="1.5" Fill="#BBB" Margin="0.5"/>
                </UniformGrid>
                <Grid Canvas.Left="48" Canvas.Top="245">
                    <Ellipse x:Name="Btn1" Width="24" Height="24" Fill="White" Effect="{StaticResource BtnShadow}"/>
                    <TextBlock Text="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#CCC" FontWeight="Bold"/>
                </Grid>
                <Grid Canvas.Left="48" Canvas.Top="280">
                    <Ellipse x:Name="Btn2" Width="24" Height="24" Fill="White" Effect="{StaticResource BtnShadow}"/>
                    <TextBlock Text="2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#CCC" FontWeight="Bold"/>
                </Grid>
                <StackPanel Orientation="Horizontal" Canvas.Left="45" Canvas.Top="325">
                    <Rectangle x:Name="Led1" Width="4" Height="4" Fill="#DDD" Margin="2,0"/>
                    <Rectangle x:Name="Led2" Width="4" Height="4" Fill="#DDD" Margin="2,0"/>
                    <Rectangle x:Name="Led3" Width="4" Height="4" Fill="#DDD" Margin="2,0"/>
                    <Rectangle x:Name="Led4" Width="4" Height="4" Fill="#DDD" Margin="2,0"/>
                </StackPanel>
                <TextBlock Text="Wii" Canvas.Left="50" Canvas.Top="350" FontFamily="Times New Roman" FontStyle="Italic" FontSize="20" Foreground="#BBB"/>
                <Path x:Name="BtnB" Data="M35,10 L85,10 L80,20 L40,20 Z" Fill="#333" Opacity="0.0" Canvas.Left="0" Canvas.Top="90"/>
            </Canvas>
        </ControlTemplate>
    </Window.Resources>

    <Border Background="#121212" CornerRadius="15" BorderBrush="#333" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" Color="Black"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="25,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse x:Name="StatusDot" Width="10" Height="10" Fill="#FF3333" Margin="0,0,15,0"/>
                    <TextBlock x:Name="TitleText" Text="WIIMOTE PRO // SETUP" Foreground="White" FontWeight="Bold" FontSize="16" FontFamily="Segoe UI"/>
                </StackPanel>
                <Button Content="✕" HorizontalAlignment="Right" Width="40" Height="30" Click="BtnClose_Click" Background="Transparent" Foreground="#666" FontSize="16"/>
            </Grid>

            <Grid Grid.Row="1" Margin="25,0,25,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#181818" CornerRadius="12" Margin="0,0,20,0" ClipToBounds="True">
                    <Grid>
                        <Path Data="M0,0 L800,600" Stroke="#222" StrokeThickness="1"/>
                        <Path Data="M0,600 L800,0" Stroke="#222" StrokeThickness="1"/>
                        <Control x:Name="WiimoteLive" Template="{StaticResource WiimoteGraphic}" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                            <Control.RenderTransform>
                                <RotateTransform x:Name="WiimoteRotation" Angle="0"/>
                            </Control.RenderTransform>
                        </Control>
                        <TextBlock x:Name="TxtAngle" Text="0°" Foreground="{StaticResource CyanBrush}" FontSize="36" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20"/>
                    </Grid>
                </Border>

                <StackPanel Grid.Column="1" x:Name="ControlPanel" Opacity="0.3" IsEnabled="False">
                    <Border Background="#181818" CornerRadius="12" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="SETUP" Foreground="{StaticResource CyanBrush}" FontWeight="Bold" Margin="0,0,0,15"/>
                            <Grid Margin="0,0,0,5">
                                <TextBlock Text="Empfindlichkeit" Foreground="#AAA"/>
                                <TextBlock x:Name="TxtSens" Text="1.0x" Foreground="White" HorizontalAlignment="Right"/>
                            </Grid>
                            <Slider x:Name="SliderSens" Minimum="0.5" Maximum="3.0" Value="1.0" TickFrequency="0.1" IsSnapToTickEnabled="True" ValueChanged="SliderSens_ValueChanged"/>
                            <Grid Margin="0,15,0,5">
                                <TextBlock Text="Deadzone" Foreground="#AAA"/>
                                <TextBlock x:Name="TxtDead" Text="2°" Foreground="White" HorizontalAlignment="Right"/>
                            </Grid>
                            <Slider x:Name="SliderDead" Minimum="0" Maximum="10" Value="2" ValueChanged="SliderDead_ValueChanged"/>
                            <Grid Margin="0,15,0,5">
                                <TextBlock Text="Stabilisierung" Foreground="#AAA"/>
                                <TextBlock x:Name="TxtSmooth" Text="Hoch" Foreground="White" HorizontalAlignment="Right"/>
                            </Grid>
                            <Slider x:Name="SliderSmooth" Minimum="0" Maximum="100" Value="85" ValueChanged="SliderSmooth_ValueChanged"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#181818" CornerRadius="12" Padding="15" Height="150">
                        <ScrollViewer VerticalScrollBarVisibility="Hidden">
                            <TextBlock x:Name="LogText" Foreground="#555" FontFamily="Consolas" FontSize="12" TextWrapping="Wrap" Text="System start..."/>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Grid>

            <Grid x:Name="CalibrationOverlay" Grid.Row="0" Grid.RowSpan="2" Panel.ZIndex="100" Background="#F2000000" Visibility="Visible">
                <Border Background="#1A1A1A" Width="800" Height="500" CornerRadius="15" BorderBrush="{StaticResource CyanBrush}" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="80"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="3-STUFEN KALIBRIERUNG" Foreground="{StaticResource CyanBrush}" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        <Grid x:Name="Step1Grid" Grid.Row="1" Visibility="Visible">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" Margin="20">
                                <Rectangle Width="300" Height="4" Fill="#555" VerticalAlignment="Center" Margin="0,60,0,0"/>
                                <Control Template="{StaticResource WiimoteGraphic}" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                                    <Control.LayoutTransform>
                                        <TransformGroup>
                                            <RotateTransform Angle="90"/>
                                            <ScaleTransform ScaleX="0.7" ScaleY="0.7"/>
                                        </TransformGroup>
                                    </Control.LayoutTransform>
                                    <Control.Effect>
                                        <DropShadowEffect BlurRadius="20" Opacity="0.5" Direction="270"/>
                                    </Control.Effect>
                                </Control>
                                <Path Data="M0,0 L0,-40 L-10,-30 M0,-40 L10,-30" Stroke="{StaticResource CyanBrush}" StrokeThickness="4" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-30,0,0"/>
                                <TextBlock Text="TASTEN ZEIGEN ZUR DECKE" Foreground="{StaticResource CyanBrush}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-80,0,0"/>
                            </Grid>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,30,0">
                                <TextBlock Text="SCHRITT 1 VON 3" Foreground="#888" FontWeight="Bold" Margin="0,0,0,20"/>
                                <TextBlock Text="FLACH HINLEGEN" Foreground="White" FontSize="24" FontWeight="Bold"/>
                                <TextBlock Text="Auf den Tisch legen." Foreground="White" FontSize="18" Margin="0,5,0,5"/>
                                <TextBlock Text="Tasten zeigen nach OBEN." Foreground="{StaticResource CyanBrush}" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>

                        <Grid x:Name="Step2Grid" Grid.Row="1" Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" Margin="20">
                                <Control Template="{StaticResource WiimoteGraphic}" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                                    <Control.LayoutTransform>
                                        <TransformGroup>
                                            <RotateTransform Angle="-90"/>
                                            <ScaleTransform ScaleX="0.7" ScaleY="0.7"/>
                                        </TransformGroup>
                                    </Control.LayoutTransform>
                                    <Control.Effect>
                                        <DropShadowEffect BlurRadius="20" Color="#00FF00" Opacity="0.3"/>
                                    </Control.Effect>
                                </Control>
                                <TextBlock Text="ZAHLEN ZEIGEN NACH RECHTS ->" Foreground="#00FF00" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,40"/>
                                <Path Data="M0,0 L10,10 L20,0" Stroke="White" StrokeThickness="3" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0"/>
                                <TextBlock Text="TASTEN ZU DIR" Foreground="White" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0"/>
                            </Grid>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,30,0">
                                <TextBlock Text="SCHRITT 2 VON 3" Foreground="#888" FontWeight="Bold" Margin="0,0,0,20"/>
                                <TextBlock Text="TASTEN ZU DIR!" Foreground="{StaticResource CyanBrush}" FontSize="24" FontWeight="Bold"/>
                                <TextBlock Text="Zahlen zeigen nach RECHTS." Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,10,0,5"/>
                                <TextBlock Text="(Wie Lenkrad Rechts)" Foreground="#888" FontSize="14"/>
                            </StackPanel>
                        </Grid>

                        <Grid x:Name="Step3Grid" Grid.Row="1" Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" Margin="20">
                                <Control Template="{StaticResource WiimoteGraphic}" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                                    <Control.LayoutTransform>
                                        <TransformGroup>
                                            <RotateTransform Angle="90"/>
                                            <ScaleTransform ScaleX="0.7" ScaleY="0.7"/>
                                        </TransformGroup>
                                    </Control.LayoutTransform>
                                    <Control.Effect>
                                        <DropShadowEffect BlurRadius="20" Color="#00FF00" Opacity="0.3"/>
                                    </Control.Effect>
                                </Control>
                                <TextBlock Text="&lt;- ZAHLEN ZEIGEN NACH LINKS" Foreground="#00FF00" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,40"/>
                                <Path Data="M0,0 L10,10 L20,0" Stroke="White" StrokeThickness="3" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0"/>
                                <TextBlock Text="TASTEN ZU DIR" Foreground="White" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0"/>
                            </Grid>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,30,0">
                                <TextBlock Text="SCHRITT 3 VON 3" Foreground="#888" FontWeight="Bold" Margin="0,0,0,20"/>
                                <TextBlock Text="TASTEN ZU DIR!" Foreground="{StaticResource CyanBrush}" FontSize="24" FontWeight="Bold"/>
                                <TextBlock Text="Zahlen zeigen nach LINKS." Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,10,0,5"/>
                                <TextBlock Text="(Wie Lenkrad Links)" Foreground="#888" FontSize="14"/>
                            </StackPanel>
                        </Grid>

                        <Button x:Name="BtnStep1" Grid.Row="2" Content="FLACH POSITIONIERT ->" Width="400" Height="50" 
                                Background="{StaticResource CyanBrush}" Foreground="Black" FontWeight="Bold" FontSize="16"
                                Click="BtnStep1_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button x:Name="BtnStep2" Grid.Row="2" Content="IST RECHTS ->" Width="400" Height="50" 
                                Background="{StaticResource CyanBrush}" Foreground="Black" FontWeight="Bold" FontSize="16"
                                Visibility="Collapsed" Click="BtnStep2_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button x:Name="BtnStep3" Grid.Row="2" Content="IST LINKS (ABSCHLIESSEN)" Width="400" Height="50" 
                                Background="#00FF00" Foreground="Black" FontWeight="Bold" FontSize="16"
                                Visibility="Collapsed" Click="BtnStep3_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>